{
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
      "startCommand": "uvicorn src.researcher.main:app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/docs",
      "numReplicas": 1,
      "restartPolicyType": "ON_FAILURE"
    }
}  